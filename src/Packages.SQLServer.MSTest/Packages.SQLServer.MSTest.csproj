	  <SignAssembly>true</SignAssembly>
	  <AssemblyOriginatorKeyFile>../../DBConfirm.snk</AssemblyOriginatorKeyFile>
	  <PackageProjectUrl>https://www.dbconfirm.com</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/Bungalow64/DBConfirm.git</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>Documentation\DBConfirm.Packages.SQLServer.MSTest.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Databases.SQLServer\Databases.SQLServer.csproj" />
